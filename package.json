{
  "name": "inijs",
  "version": "1.0.0",
  "description": "A little library full of common helper functions so you don't have to write one from scratch.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "eslint tsconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asbp/inijs.git"
  },
  "bugs": {
    "url": "https://github.com/asbp/inijs/issues"
  },
  "author": "asbp",
  "keywords": [
    "js-helpers",
    "truthy",
    "falsy",
    "js"
  ],
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.3",
    "eslint": "^8.26.0",
    "jest": "^29.2.1",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}